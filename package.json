{
  "name": "vscode-val-build",
  "description": "Val Build IntelliSense",
  "author": "Val Build",
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "1.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/valbuild/vscode-val-build"
  },
  "publisher": "valbuild",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "displayName": "Val Build IntelliSense",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./client/out/extension",
  "type": "module",
  "contributes": {
    "commands": [
      {
        "command": "val.login",
        "title": "Val: Log In"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Val Build IntelliSense",
      "properties": {
        "valBuild.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the Val build."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.18.34",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/vsce": "^3.3.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^5.3.2"
  }
}
